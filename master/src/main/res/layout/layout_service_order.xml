<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.kiun.modelcommonsupport.ui.views.NavigatorBar
        app:barTitle="@string/service_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps2d.MapView
            android:id="@+id/map_service_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/orderInfoPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/background_shape_radius_white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                    app:dataPath="orderStatus"
                    app:goneFormula="=null"
                    app:tintColorLabel="@id/statusLabel"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">
                    <com.kiun.modelcommonsupport.ui.views.ATextView
                        app:dataPath="orderStatus"
                        app:format="[items][item]待支付,待接单,待上门,待服务,服务中,待支付,已完成,已完成,取消订单[/item][color]0072ff,FF7D00,FF7D00,FF7D00,FF7D00,0072ff,888888,888888,888888[/color][/items]"
                        android:id="@+id/statusLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="状态"
                        android:textSize="14sp"
                        android:background="@drawable/svg_radis_label"
                        android:textColor="@color/orange" />
                </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
                <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                    app:dataPath="salesAfterStatus"
                    app:goneFormula="=null"
                    app:tintColorLabel="@id/statusLabelAfter"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp">
                    <com.kiun.modelcommonsupport.ui.views.ATextView
                        app:dataPath="salesAfterStatus"
                        app:format="[items][item]待上门,待服务,服务中,已完成[/item][color]FF7D00,FF7D00,0072ff,888888[/color][/items]"
                        android:id="@+id/statusLabelAfter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="状态"
                        android:textSize="14sp"
                        android:background="@drawable/svg_radis_label"
                        android:textColor="@color/orange" />
                </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.kiun.modelcommonsupport.ui.views.AImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/id_wait_imageView"
                    app:radius="20dp"
                    app:dataPath="customerHeadImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    android:src="@color/orange" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.kiun.modelcommonsupport.ui.views.ATextView
                            app:dataPath="appointmentName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赵小姐"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/overTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00:00"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="18sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.kiun.modelcommonsupport.ui.views.ATextView
                            app:dataPath="seccondItemName"
                            android:id="@+id/text_service_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="洗衣机维修"
                            android:textColor="@color/light_black"
                            android:textSize="12sp"/>

                        <View
                            android:id="@+id/view_division"
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/text_service_type"
                            android:layout_marginLeft="10dp"
                            android:background="@color/gray"/>

                        <TextView
                            android:id="@+id/text_service_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/view_division"
                            android:text="距您0.5km"
                            android:textColor="@color/light_black"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/overTimeTextViewTips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/service_cut_down"
                            android:textColor="@color/light_black"
                            android:textSize="12sp"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/eventPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="15dp">
                <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                    app:dataPath="salesAfterStatus"
                    app:goneFormula="!null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                        app:eventTag="0x300D"
                        app:dataPath="orderStatus"
                        app:goneFormula="=3"
                        android:id="@+id/ll_service_order_cancel"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_bigcancel"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/cancel_order"
                            android:textColor="@color/light_black"/>
                    </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
                </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
                <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                    app:eventTag="0x300E"
                    android:id="@+id/ll_service_order_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icon_page_order"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/order_detail"
                        android:textColor="@color/light_black"/>
                </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
                <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                    app:eventTag="0x3004"
                    android:id="@+id/ll_service_order_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icon_chat"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/start_chat"
                        android:textColor="@color/light_black"/>
                </com.kiun.modelcommonsupport.ui.views.ALinearLayout>

                <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                    app:eventTag="0x300F"
                    android:id="@+id/ll_service_order_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icon_phone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/call_phone"
                        android:textColor="@color/light_black"/>
                </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
            </LinearLayout>

            <com.phillipcalvin.iconbutton.IconButton
                android:id="@+id/btn_start_to_start"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#FFF"
                android:background="@drawable/button_background_shape_radius"
                android:text="@string/start_to_start"
                app:iconPadding="10dp"/>
            <com.kiun.modelcommonsupport.ui.views.ALinearLayout
                android:id="@+id/view_send"
                app:eventTag="0x3001"
                app:dataPath="salesAfterStatus"
                app:goneFormula="!null"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="发送给总部"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="#FF7D00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.kiun.modelcommonsupport.ui.views.ALinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
