<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/destLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="18dp"
        android:background="@drawable/bg_map_bubble"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="正在计算路径"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:background="#999"
            android:layout_margin="5dp"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <ImageButton
            android:src="@drawable/btn_navigation"
            android:background="@android:color/transparent"
            android:id="@+id/naviImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="3dp"
        android:id="@+id/destIconImageView"
        android:background="@drawable/shape_radius_white"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.kiun.modelcommonsupport.ui.views.AImageView
            app:dataPath="customerHeadImg"
            app:radius="20dp"
            android:scaleType="centerCrop"
            android:id="@+id/marker_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>