<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:padding="15dp"
    android:orientation="horizontal">
    <com.kiun.modelcommonsupport.ui.views.ARelativeLayout
        app:radius="8dp"
        android:background="@drawable/shape_bank_card"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_bank_card_image_bg"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <com.kiun.modelcommonsupport.ui.views.AImageView
                    app:radius="13dp"
                    app:dataPath="bankLogo"
                    android:layout_centerInParent="true"
                    android:layout_width="26dp"
                    android:layout_height="26dp" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.kiun.modelcommonsupport.ui.views.ATextView
                    app:dataPath="bankName"
                    android:text="招商银行"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="储蓄卡"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.kiun.modelcommonsupport.ui.views.ATextView
                    app:dataPath="cardNo"
                    app:maskType="maskBankCard"
                    android:layout_marginTop="10dp"
                    android:text="**** **** **** 5364"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginRight="-40dp"
            android:layout_marginTop="-60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#22FFFFFF"
            android:background="@drawable/shape_bank_card_image_bg"
            android:layout_width="140dp"
            android:layout_height="140dp" />
        <View
            android:layout_marginRight="-40dp"
            android:layout_marginTop="-60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#22FFFFFF"
            android:background="@drawable/shape_bank_card_image_bg"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </com.kiun.modelcommonsupport.ui.views.ARelativeLayout>
</RelativeLayout>
