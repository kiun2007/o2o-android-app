<?xml version="1.0" encoding="utf-8"?>
<resources>
    <array name="anim">
        <item>Default</item>
        <item>Accordion</item>
        <item>BackgroundToForeground</item>
        <item>ForegroundToBackground</item>
        <item>CubeIn</item>
        <item>CubeOut</item>
        <item>DepthPage</item>
        <item>FlipHorizontal</item>
        <item>FlipVertical</item>
        <item>RotateDown</item>
        <item>RotateUp</item>
        <item>ScaleInOut</item>
        <item>Stack</item>
        <item>Tablet</item>
        <item>ZoomIn</item>
        <item>ZoomOut</item>
        <item>ZoomOutSlide</item>
    </array>
    <string-array name="style">
        <item>NOT_INDICATOR</item>
        <item>CIRCLE_INDICATOR</item>
        <item>NUM_INDICATOR</item>
        <item>NUM_INDICATOR_TITLE</item>
        <item>CIRCLE_INDICATOR_TITLE</item>
        <item>CIRCLE_INDICATOR_TITLE_INSIDE</item>
    </string-array>
    <string-array name="indicator">
        <item>LEFT</item>
        <item>CENTER</item>
        <item>RIGHT</item>
    </string-array>

    <declare-styleable name="SimpleRatingBar">
        <!--边框颜色-->
        <attr name="srb_borderColor" format="color" />
        <!--星星填充颜色-->
        <attr name="srb_fillColor" format="color" />
        <!--控件背景颜色-->
        <attr name="srb_backgroundColor" format="color" />
        <!--星星背景颜色-->
        <attr name="srb_starBackgroundColor" format="color" />
        <!--星星拖动过程中的 边框颜色-->
        <attr name="srb_pressedBorderColor" format="color" />
        <!--星星拖动过程中的 填充颜色-->
        <attr name="srb_pressedFillColor" format="color" />
        <!--星星拖动过程中的 控件背景颜色-->
        <attr name="srb_pressedBackgroundColor" format="color" />
        <!--星星拖动过程中的 填充颜色-->
        <attr name="srb_pressedStarBackgroundColor" format="color" />
        <!--星星个数-->
        <attr name="srb_numberOfStars" format="integer" />
        <!--星星大小宽高 可调整宽高-->
        <attr name="srb_starSize" format="dimension" />
        <!--星星最大宽高-->
        <attr name="srb_maxStarSize" format="dimension" />
        <!--星星之间间距-->
        <attr name="srb_starsSeparation" format="dimension" />
        <!--星星边框宽度-->
        <attr name="srb_starBorderWidth" format="float" />
        <!--星星圆角弧度-->
        <attr name="srb_starCornerRadius" format="float" />
        <!--评分控件  是否可以拖动-->
        <attr name="srb_isIndicator" format="boolean" />
        <!--评分控件  默认值-->
        <attr name="srb_rating" format="float" />
        <!--星星每次间隔大小-->
        <attr name="srb_stepSize" format="float" />
        <attr name="srb_drawBorderEnabled" format="boolean" />
        <attr name="srb_gravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
</resources>