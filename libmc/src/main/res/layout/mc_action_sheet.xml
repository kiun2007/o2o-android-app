<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/action_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_middle_padding"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/action_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:padding="@dimen/common_middle_padding"
        android:textSize="@dimen/btn_text_size"
        android:textColor="@color/main_color"
        android:background="@drawable/bg_action_sheet_item"
        android:layout_marginRight="@dimen/common_middle_padding"
        android:layout_marginTop="@dimen/common_middle_padding"
        android:layout_marginLeft="@dimen/common_middle_padding"/>

</LinearLayout>
